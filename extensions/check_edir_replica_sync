
check_edir_replica_sync()
{
    NDSREPAIR=$(which ndsrepair 2>/dev/null)

    [ -z ${NDSREPAIR} ] && return 1

    total_errors=$(${NDSREPAIR} -E | grep -i "total errors" | cut -d: -f2 | \
        sed 's/\s//g')
    RETVAL=$?

    [ $RETVAL -ne 0 ] && return 1

    [ $total_errors -ne 0 ] && return 1
    return 0
}

