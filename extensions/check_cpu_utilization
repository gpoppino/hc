
check_cpu_utilization()
{
    cpu_util=$((100 - $(vmstat 1 4 | awk 'NR > 3 { sum += $15 } END { print sum/3 }' | cut -d. -f1) ))
    
    if [ $cpu_util -ge ${CPU_THRESHOLD} ];
    then
        echo " + CPU utilization is equal or greater than %${CPU_THRESHOLD}"
        return 1
    fi

    return 0
}

