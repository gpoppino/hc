
check_lsi_raid()
{
    MPTSTATUS="/usr/bin/mpt-status --autoload -s"

    RETVAL=0
    sudo ${MPTSTATUS} 2>&1 >/dev/null
    [[ $? -ge 16 ]] && RETVAL=1 
    
    sudo ${MPTSTATUS} | awk '/DEGRADED|FAILED/ { print " +", $0 }'

    return ${RETVAL}
}

probe_lsi_raid()
{
    which mpt-status >/dev/null 2>&1 || return 1
    return 0
}

